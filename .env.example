# 多协议数据采集系统环境配置示例

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=multiproto_gather

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API网关配置
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000
API_SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# SSH采集器配置
SSH_COLLECTOR_HOST=0.0.0.0
SSH_COLLECTOR_PORT=8021
SSH_DEFAULT_TIMEOUT=30
SSH_MAX_CONNECTIONS=100

# Go SSH采集器配置
GO_SSH_COLLECTOR_HOST=0.0.0.0
GO_SSH_COLLECTOR_PORT=8022
GIN_MODE=release

# API采集器配置
API_COLLECTOR_HOST=0.0.0.0
API_COLLECTOR_PORT=8023
API_DEFAULT_TIMEOUT=30
API_MAX_RETRIES=3

# SNMP采集器配置
SNMP_COLLECTOR_HOST=0.0.0.0
SNMP_COLLECTOR_PORT=8024
SNMP_DEFAULT_TIMEOUT=5
SNMP_DEFAULT_RETRIES=3

# Netmiko SSH采集器配置
NETMIKO_SSH_COLLECTOR_HOST=0.0.0.0
NETMIKO_SSH_COLLECTOR_PORT=8025
NETMIKO_DEFAULT_TIMEOUT=60
NETMIKO_MAX_SESSIONS=50

# 任务调度器配置
TASK_SCHEDULER_HOST=0.0.0.0
TASK_SCHEDULER_PORT=8010
SCHEDULER_TIMEZONE=Asia/Shanghai
SCHEDULER_MAX_WORKERS=10

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5

# 监控配置
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# 安全配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# 性能配置
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65
MAX_REQUEST_SIZE=100MB

# 缓存配置
CACHE_TTL=300
CACHE_MAX_SIZE=1000
SESSION_TIMEOUT=3600

# 开发配置
DEBUG=false
DEVELOPMENT_MODE=false
HOT_RELOAD=false

# Docker配置
DOCKER_NETWORK=multiproto_network
DOCKER_RESTART_POLICY=unless-stopped

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/data/backups